# Prefer C++17
#build --cxxopt='-std=c++17' # This should work, but doesn't
build --action_env=BAZEL_CXXOPTS="-std=c++17"

# Try to mostly link statically
build --dynamic_mode=off

# Max parallel jobs
build --jobs=100

# Don't stop on the first error
build --keep_going

# Friendly output
build --show_loading_progress
build --show_progress


